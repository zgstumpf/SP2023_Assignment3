@model IEnumerable<zgstumpf_Assignment3.Models.MovieActor>

@{
    ViewData["Title"] = "Movies and Actors";
}


<h1>Movies and Actors</h1>

<p>
    <a asp-action="Create">Add a movie/actor pair</a>
</p>
<table class="table make-data-table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Movie)</th>
            <th>@Html.DisplayNameFor(model => model.Actor)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) 
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Movie.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Actor.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
