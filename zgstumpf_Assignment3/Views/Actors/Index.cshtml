@model IEnumerable<zgstumpf_Assignment3.Models.Actor>

@{
    ViewData["Title"] = "Actors";
}



<h1>Actors</h1>

<p>
    <a asp-action="Create">Add an actor</a>
</p>

<table class="table make-data-table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Gender</th>
            <th>Age</th>
            <th>IMDb Link</th>
            <th>Photo</th>
            <th>Actions</th> @*For edit/details/delete options*@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    <a href="@Html.DisplayFor(modelItem => item.ImdbHyperlink)" target="_blank" rel="noopener noreferrer">@Html.DisplayFor(modelItem => item.ImdbHyperlink)</a>
                </td>
                <td>
                    <img class="media-image-in-table" src="@Html.DisplayFor(modelItem => item.PhotoUrl)" alt="An image relevant to the specific actor/actress.">
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

